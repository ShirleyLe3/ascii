{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "plugins": [
      { "transform": "./src/transforms/glsl.ts" },
      { "transform": "./src/transforms/esm.ts", "after": true }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.spec.*",
    "src/**/*.test.*"
  ]
}
