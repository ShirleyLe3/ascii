{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "plugins": [
      { "transform": "ts-transform-glsl" }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/**/*.spec.*",
    "src/**/*.test.*"
  ]
}
